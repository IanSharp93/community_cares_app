<%= simple_form_for @appointment_request do |f| %>
  <%= f.input :first_name, label: 'First name' %>
  <%= f.input :last_name %>
  <%= f.input :sex, inline_label: 'Sex', placeholder: 'Male, Female, Rather Not Say' %>
  <%= f.input :email, label: 'Email' %>
  <%= f.input :phone, inline_label: 'Phone' %>
  <%= f.input :comments, placeholder: 'Tell us why you are here' %>
  <%= f.input :type_of_appointment, inline_label: 'Appointment Type' %>
  <%= f.error :base %>
  <%= f.submit %>
<% end %>
